<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <parent>
    <artifactId>structr-test-configuration</artifactId>
    <groupId>org.structr</groupId>
    <version>5.1-SNAPSHOT</version>
    <relativePath>../structr-test-configuration/pom.xml</relativePath>
  </parent>
  <modelVersion>4.0.0</modelVersion>
  <artifactId>structr-selenium-tests</artifactId>
  <name>Structr Selenium Tests</name>
  <version>5.1-SNAPSHOT</version>
  <build>
    <plugins>
      <plugin>
        <artifactId>maven-jar-plugin</artifactId>
        <version>2.4</version>
        <configuration>
          <archive>
            <manifest>
              <addClasspath>true</addClasspath>
              <mainClass>org.structr.selenium.dsl.SeleniumTestRunner</mainClass>
            </manifest>
          </archive>
        </configuration>
      </plugin>
      <plugin>
        <artifactId>maven-shade-plugin</artifactId>
        <version>3.1.1</version>
        <executions>
          <execution>
            <phase>package</phase>
            <goals>
              <goal>shade</goal>
            </goals>
          </execution>
        </executions>
      </plugin>
      <plugin>
        <groupId>org.codehaus.mojo</groupId>
        <artifactId>exec-maven-plugin</artifactId>
        <version>3.1.0</version>
        <executions>
          <execution>
            <id>structr-selenium-tests</id>
            <phase>integration-test</phase>
            <goals>
              <goal>exec</goal>
            </goals>
          </execution>
        </executions>
        <configuration>
          <executable>bash</executable>
          <arguments>
            <argument>${project.build.directory}/test-classes/selenium-docker-runner.sh</argument>
            <argument>-s</argument>
            <argument>${project.build.directory}/failsafe-reports/selenium-summary.xml</argument>
            <argument>-d</argument>
            <argument>${basedir}/src/test/selenium/apps/test1</argument>
            <argument>-k</argument>
            <argument>${structrLicenseKey}</argument>
            <argument>-t</argument>
            <argument>${basedir}/src/test/selenium/testsuite</argument>
            <argument>-u</argument>
            <argument>-v</argument>
            <argument>${project.version}</argument>
          </arguments>
          <workingDirectory>${project.build.directory}/test-classes</workingDirectory>
          <skip>${skipTests}</skip>
        </configuration>
      </plugin>
    </plugins>
  </build>
  <dependencies>
    <dependency>
      <groupId>org.testng</groupId>
      <artifactId>testng</artifactId>
      <version>7.7.0</version>
      <scope>test</scope>
      <exclusions>
        <exclusion>
          <artifactId>jcommander</artifactId>
          <groupId>com.beust</groupId>
        </exclusion>
        <exclusion>
          <artifactId>jquery</artifactId>
          <groupId>org.webjars</groupId>
        </exclusion>
      </exclusions>
    </dependency>
  </dependencies>
</project>
