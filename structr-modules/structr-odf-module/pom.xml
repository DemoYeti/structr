<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <name>Structr ODF Module</name>
    <parent>
        <groupId>org.structr</groupId>
        <artifactId>structr-modules</artifactId>
        <version>2.0.2-SNAPSHOT</version>
    </parent>
    <artifactId>structr-odf-module</artifactId>
    <packaging>jar</packaging>

    <properties>
        <maven.compiler.source>1.8</maven.compiler.source>
        <maven.compiler.target>1.8</maven.compiler.target>
    </properties>

    <dependencies>
        <dependency>
            <groupId>${project.groupId}</groupId>
            <artifactId>structr-api-builder-module</artifactId>
            <version>${project.version}</version>
        </dependency>
        <dependency>
            <groupId>${project.groupId}</groupId>
            <artifactId>structr-ui</artifactId>
            <version>${project.version}</version>
        </dependency>
        <dependency>
            <groupId>org.odftoolkit</groupId>
            <artifactId>odfdom-java</artifactId>
            <version>0.8.7</version>
        </dependency>
        <dependency>
                <groupId>xml-apis</groupId>
                <artifactId>xml-apis</artifactId>
                <version>1.3.04</version>
        </dependency>
        <dependency>
                <groupId>xerces</groupId>
                <artifactId>xercesImpl</artifactId>
                <version>2.9.1</version>
        </dependency>
    </dependencies>

    <build>
        <plugins>
            <plugin>
                <artifactId>maven-assembly-plugin</artifactId>
                <version>2.6</version>
                <configuration>
                    <descriptor>src/assembly/module.xml</descriptor>
                    <appendAssemblyId>false</appendAssemblyId>
                    <archive>
                        <manifestSection>
                            <Name>ODFDOM</Name>
                            <manifestEntries>
                                <ODFDOM-Built-Date>2011-01-20T18:32:50</ODFDOM-Built-Date>
                                <ODFDOM-Name>odfdom</ODFDOM-Name>
                                <ODFDOM-Supported-Odf-Version>1.2</ODFDOM-Supported-Odf-Version>
                                <ODFDOM-Version>0.8.7</ODFDOM-Version>
                                <ODFDOM-Website>http://odftoolkit.org</ODFDOM-Website>
                            </manifestEntries>
                        </manifestSection>
                    </archive>
                </configuration>
                <executions>
                    <execution>
                        <id>create-archive</id>
                        <phase>package</phase>
                        <goals>
                            <goal>single</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>
</project>