<assembly
	xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2
      http://maven.apache.org/xsd/assembly-1.1.2.xsd">

	<id>all</id>
	<formats>
		<format>jar</format>
	</formats>
	<includeBaseDirectory>false</includeBaseDirectory>
	<fileSets>
		<fileSet>
			<directory>target/classes</directory>
			<outputDirectory>/</outputDirectory>
		</fileSet>
	</fileSets>
	<dependencySets>
		<dependencySet>
			<outputDirectory>/</outputDirectory>
			<scope>runtime</scope>
			<unpack>true</unpack>
			<includes>
				<include>org.igniterealtime.smack:smack-core</include>
				<include>org.igniterealtime.smack:smack-java7</include>
				<include>org.igniterealtime.smack:smack-tcp</include>
				<include>org.igniterealtime.smack:smack-sasl-javax</include>
				<include>org.igniterealtime.smack:smack-extensions</include>
				<include>org.igniterealtime.smack:smack-im</include>
				<include>org.igniterealtime.smack:smack-resolver-javax</include>
				<include>org.jxmpp:jxmpp-core</include>
				<include>org.jxmpp:jxmpp-util-cache</include>
				<include>xpp3:xpp3</include>
			</includes>
		</dependencySet>
	</dependencySets>
</assembly>