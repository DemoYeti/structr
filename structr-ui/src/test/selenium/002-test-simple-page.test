
define username "admin"
define password "admin"

run "snippets/init"
run "snippets/pages"

# create page
pause 1000
click id "add_page"
pause 5000
click text "Initial body text"
pause 1000
runScript "window.editor.setValue('${project.name}');"
click id "saveAndClose"

pause 2000

# delete page
mouseOver css "div.page.node > b"
mouseOver css "div.page.node > i.delete_icon"
click css "div.page.node > i.delete_icon"
click class "yesButton"

# logout
run "snippets/logout"
